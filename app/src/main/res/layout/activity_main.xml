<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/champ"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/char_1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:layout_marginStart="50dp"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:background="@drawable/scroll" />
    <TextView
        android:id="@+id/char_2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/char_1"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:background="@drawable/scroll"/>
    <TextView
        android:id="@+id/char_3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/char_2"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:background="@drawable/scroll"/>
    <TextView
        android:id="@+id/char_4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/char_3"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:background="@drawable/scroll"/>
    <TextView
        android:id="@+id/char_5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/char_4"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:background="@drawable/scroll"/>
    <TextView
        android:id="@+id/char_6"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/char_5"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:background="@drawable/scroll"/>
    <TextView
        android:id="@+id/char_7"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/char_6"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:background="@drawable/scroll"/>

    <Button
        android:id="@+id/but_1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="150dp"
        android:text="А"
        android:onClick="Set_1"/>

    <Button
        android:id="@+id/but_2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/but_1"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:text="Б"
        android:onClick="Set_2"/>

    <Button
        android:id="@+id/but_3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/but_2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:text="Р"
        android:onClick="Set_3"/>

    <Button
        android:id="@+id/but_4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/but_3"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:text="И"
        android:onClick="Set_4"/>

    <Button
        android:id="@+id/but_5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/but_4"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:text="К"
        android:onClick="Set_5"/>

    <Button
        android:id="@+id/but_6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/but_5"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:text="О"
        android:onClick="Set_6"/>

    <Button
        android:id="@+id/but_7"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/but_6"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:text="С"
        android:onClick="Set_7"/>

    <ImageView
        android:id="@+id/OK"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@id/char_7"
        android:layout_marginStart="30dp"
        android:layout_toRightOf="@id/char_6"
        android:layout_centerVertical="true"
        android:background="@drawable/turned"
        android:onClick="pass"/>

</RelativeLayout>



